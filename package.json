{
	"name": "wikiplus-highlight",
	"version": "3.3.1",
	"description": "A plugin for the MediaWiki front-end add-on \"Wikiplus\"",
	"keywords": [
		"mediawiki",
		"codemirror",
		"monaco"
	],
	"homepage": "https://github.com/bhsd-harry/Wikiplus-highlight#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/Wikiplus-highlight/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/dist/main.min.js*"
	],
	"browser": "/dist/main.min.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/Wikiplus-highlight.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:css": "stylelint *.css",
		"lint:md": "markdownlint-cli2 '**/*.md'",
		"lint": "npm run lint:ts && npm run lint:css && npm run lint:md",
		"bundle": "node bundle.cjs",
		"build": "npm run bundle && esbuild ./build/main.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=dist/main.min.js && eslint --no-config-lookup -c eslint.dist.mjs dist/*.js"
	},
	"devDependencies": {
		"@bhsd/browser": "^0.2.0",
		"@bhsd/code-standard": "^1.3.2",
		"@bhsd/codemirror-mediawiki": "^3.8.0",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/jquery": "^3.5.33",
		"@types/node": "^24.10.1",
		"@types/oojs-ui": "^0.49.4",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"esbuild": "^0.25.12",
		"eslint": "^9.39.1",
		"eslint-plugin-es-x": "^9.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.2.1",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"markdownlint-cli2": "^0.19.0",
		"monaco-editor": "^0.53.0",
		"stylelint": "^16.26.1",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-plugin-use-baseline": "^1.1.0",
		"types-mediawiki": "^2.0.0",
		"typescript": "^5.9.3"
	}
}
