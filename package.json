{
	"name": "wikiplus-highlight",
	"version": "3.2.11",
	"description": "A plugin for the MediaWiki front-end add-on \"Wikiplus\"",
	"keywords": [
		"mediawiki",
		"codemirror",
		"monaco"
	],
	"homepage": "https://github.com/bhsd-harry/Wikiplus-highlight#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/Wikiplus-highlight/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/dist/main.min.js*"
	],
	"browser": "/dist/main.min.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/Wikiplus-highlight.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:css": "stylelint *.css",
		"lint": "npm run lint:ts && npm run lint:css",
		"bundle": "npm run build:css && node bundle.cjs",
		"build:css": "esbuild styles.css --minify --outfile=dist/styles.css",
		"build": "npm run bundle && esbuild ./build/main.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=dist/main.min.js && eslint --no-config-lookup -c eslint.dist.mjs dist/*.js"
	},
	"devDependencies": {
		"@bhsd/browser": "^0.0.1",
		"@bhsd/code-standard": "^1.3.0",
		"@bhsd/codemirror-mediawiki": "^3.6.1",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/jquery": "^3.5.33",
		"@types/node": "^24.9.2",
		"@types/oojs-ui": "^0.49.4",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"esbuild": "^0.25.11",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.1.11",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"monaco-editor": "^0.53.0",
		"stylelint": "^16.25.0",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-plugin-use-baseline": "^1.0.3",
		"types-mediawiki": "^2.0.0",
		"typescript": "^5.9.3"
	}
}
